---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
---

<div id="background"></div>
<script>
  const exagonSize = 24;
  const exagonHeiht = 27;
  const necessaryItemsPerRow = Math.round(
    window.screen.availWidth / exagonSize
  ); // not considering margin
  const necessaryRow = Math.round(window.screen.availHeight / exagonHeiht) + 2; // not considring margin
  const backgroundEl = document.getElementById("background");

  if (backgroundEl) {
    [...Array(necessaryRow).keys()].forEach((item) => {
      const row = document.createElement("div");
      row.className = "row";
      [...Array(necessaryItemsPerRow).keys()].forEach((item) => {
        const hexagon = document.createElement("div");
        hexagon.className = "hexagon";
        row.appendChild(hexagon);
      });
      backgroundEl.appendChild(row);
    });
  }
</script>
<style is:global>
  /** for exagon **/
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    z-index: 2;
    opacity: 0;
    animation: appearBackground 1s linear;
    animation-fill-mode: forwards;
    animation-delay: 300ms;
    pointer-events: none;
  }
  @keyframes appearBackground {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 0.4;
    }
  }
  .row {
    display: inline-flex;
    margin-top: -16px;
    margin-left: -12px;
  }
  .row:nth-child(even) {
    margin-left: 1px;
  }
  .hexagon {
    position: relative;
    /* width: 100px;
    height: 110px; */
    width: 24px;
    height: 27px;
    background: #111;
    margin: 1px;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transition: 2s;
  }
  .hexagon:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    pointer-events: none;
    background: rgba(255, 255, 255, 0.02);
    z-index: 1000;
  }
  /** END exagon **/
</style>
